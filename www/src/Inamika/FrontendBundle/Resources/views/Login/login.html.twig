{% extends "InamikaFrontendBundle::layout.html.twig" %}
{% block body %}
{{ parent()}}
{{ render(controller('InamikaFrontendBundle:Utils:navbar',{ home:false , class:'no-fixed',route: app.request.get('_route') })) }}
<div class="container">
    <div class="account">
        <div class="row py-5">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <div class="card box-login p-4">
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form-material sendToApi','novalidate':'novalidate'} }) }}
                            <h4 class="card-title text-center text-dark">Acceso clientes</h4>
                            <hr>
                            <div class="row py-4">
                                <div class="col-sm-12 form-group">
                                    {{form_label(form.username)}}
                                    {{form_widget(form.username,{ attr:{ class:'form-control rounded-pill py-4 px-4'}})}}
                                </div>
                                <div class="col-sm-12 form-group">
                                    {{form_label(form.password)}}
                                    {{form_widget(form.password,{ attr:{ class:'form-control rounded-pill py-4 px-4'}})}}
                                </div>
                            </div>
                            <div class="text-right"><a href="{{ path('inamika_frontend_forgot') }}" class="beforeSpinner">Olvidé mi contraseña</a></div>
                            <div class="text-center">
                                <p>
                                    <small id="errorLogin" class="form-text text-danger d-n">Email o contraseña incorrectos</small>
                                </p>
                                <button type="submit" class="btn-get-started rounded-pill btn-primary px-5 py-3" >Ingresar</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent()}}
    <script>
        function after404(){
            $("#errorLogin").fadeIn();
        }
        function after200(){
            loading.show();
            location.href="{{ path('inamika_frontend_account_orders') }}";
        }

        $(function (){
            
        })
    </script>
{% endblock %}