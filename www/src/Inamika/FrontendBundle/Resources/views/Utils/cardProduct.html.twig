<div class="card-service cursor-pointer" (click)="goToProduct(item.id)">
    {% if item.picture %}
        <div class="img" style="background-image: url('{{ asset('uploads/') }}md/{{ item.picture }}');"></div>
    {% else %}
        <div class="img" style="background-image: url('{{ asset('bundles/inamikafrontend/') }}no-foto.png');"></div>
    {% endif %}
    <div class="caption">
        <h4>{{ item.name }}</h4>
        <hr>
        <p class="mb-0">{{ item.description }}</p>
        <h4 class="mt-2">{{ item.currency.symbol }} {{ item.price | number_format(0, ',', '.') }}</h4>
        <div class="text-center">
            <a role="button" href="{{ path('inamika_frontend_product',{ id: item.id }) }}" class="btn rounded-pill btn-primary btn-sm pl-3 pr-3 beforeSpinner">Ver producto</a>
        </div>
    </div>
</div>